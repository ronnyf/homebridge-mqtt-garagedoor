{
  "pluginAlias": "GarageDoorSwitch",
  "pluginType": "accessory",
  "singular": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "GarageDoor"
      },
      "mqttHost": {
        "type": "string",
        "title": "URL",
        "description": "MQTT broker URL default: mqtt://localhost:1883",
        "placeholder": "mqtt://localhost:1883"
      },
      "mqttUsername": {
        "type": "string",
        "required": false,
        "title": "Username",
        "description": "MQTT Username (optional)"
      },
      "mqttPassword": {
        "type": "string",
        "required": false,
        "title": "Password",
        "description": "MQTT Password (optional)"
      },
      "mqttClientID": {
        "type": "string",
        "title": "ClientID",
        "required": false,
        "description": "MQTT Client ID (optional, default: HomeBridge)"
      },
      "setTopic": {
        "type": "string",
        "title": "SET topic",
        "placeholder": "garage/door/set",
        "description": "MQTT Topic to trigger the garage door motor"
      },
      "stateTopic": {
        "type": "string",
        "title": "STATE topic",
        "placeholder": "garage/door/state",
        "description": "MQTT Topic for door state subscription"
      },
      "messageOpen": {
        "type": "string",
        "title": "OPEN message",
        "placeholder": "open",
        "description": "MQTT message payload for the `open` command"
      },
      "messageClose": {
        "type": "string",
        "title": "CLOSE message",
        "placeholder": "close",
        "description": "MQTT message payload for the `close` command"
      }
    }
  }
}